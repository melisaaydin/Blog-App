@model List<Tag>

<style>
    .vc-tags-card {
        border: 1px solid var(--card-shadow);
        background-color: var(--card-background) !important;

    }

    .vc-tags-title {
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--sidebar-title-color);
        margin-bottom: 1.8rem;
    }

    .vc-tag-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .vc-tag-item {
        margin-bottom: 0;
    }

    .vc-tag-link {
        display: inline-flex;
        align-items: center;
        padding: 0.4rem 1rem;
        border-radius: 1.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        background-color: var(--vc-tags-menu-item-bg);
        color: var(--vc-tags-menu-item-text);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
    }

    .vc-tag-link:hover {
        background-color: var(--vc-tags-menu-item-hover-bg);
        color: var(--text-color);
        transform: translateY(-2px);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    .vc-no-tags-found {
        font-size: 0.9rem;
        color: var(--text-secondary-color);
    }
</style>

<div class="vc-tags-card">
    <h5 class="vc-tags-title">Tags</h5>
    <div class="card-body p-0">
        <ul class="vc-tag-list">
            @if (Model?.Any() ?? false)
            {
                @foreach (var tag in Model)
                {
                    <li class="vc-tag-item">
                        <a class="vc-tag-link" href="/posts/tag/@tag.Url" aria-label="Tag: @(tag.Text ?? "Tag")">
                            <i class="bi bi-tag-fill me-1"></i>@(tag.Text ?? "Tag")
                        </a>
                    </li>
                }
            }
            else
            {
                <p class="vc-no-tags-found">No tags found.</p>
            }
        </ul>
    </div>
</div>
