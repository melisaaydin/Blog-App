@using System.Web
@model BlogApp.Models.PostsViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model?.Tag) ? "Latest Posts | MyBlog" : $"Posts tagged '{Model.Tag}' | MyBlog";
    ViewData["Description"] = ViewBag.MetaDescription ?? "Discover the latest posts on technology, lifestyle, and more at MyBlog.";
}

@section Head {
    <meta name="description" content="@ViewBag.MetaDescription" />
    <link rel="canonical" href="https://myblog.com@(ViewBag.CanonicalUrl)" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Blog",
        "name": "MyBlog",
        "description": "@ViewBag.MetaDescription",
        "url": "https://myblog.com@(ViewBag.CanonicalUrl)",
        "blogPost": [
            @{
                var posts = Model?.Posts?.ToList() ?? new List<BlogApp.Entity.Post>();
                for (int i = 0; i < posts.Count; i++)
                {
                    var post = posts[i];
                    var isLast = i == posts.Count - 1;
                    @Html.Raw($"{{ '@@type': 'BlogPosting', 'headline': '{post.Title?.Replace("'", "\\'") ?? "Untitled"}', 'image': '/img/{(post.Image ?? "default.jpg")}', 'datePublished': '{post.PublishedOn:yyyy-MM-dd}', 'author': {{ '@@type': 'Person', 'name': '{post.User?.Name?.Replace("'", "\\'") ?? "Anonymous"}' }}, 'url': '/posts/details/{post.Url}' }}{(isLast ? "" : ",")}")
                }
            }
        ]
    }
    </script>
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Roboto', sans-serif;
        color: var(--text-color);
    }

    .header {
        margin-bottom: 3rem;
    }
    .header h1 {
        font-size: 3rem;
        font-weight: 900;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
     
    }
    .search-input-group {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        border: 1px solid var(--border-color);
        border-radius: 2rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        background-color: var(--search-input-background);
    }
    .search-input-group:focus-within {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 4px var(--primary-color-shadow);
    }
    .search-input-group input {
        border: none;
        padding: 0.875rem 1.25rem;
        border-radius: 2rem;
        font-size: 1rem;
        flex-grow: 1;
        background-color: transparent;
        color: var(--text-color);
    }
    .search-input-group input:focus {
        outline: none;
        box-shadow: none;
    }
    .search-input-group input::placeholder { 
        color: var(--search-input-placeholder-color);
    }
    .search-input-group .input-group-text {
        background-color: transparent;
        border: none;
        padding-right: 0.75rem;
        color: var(--primary-color);
        font-size: 1.25rem;
    }

    .blog-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2.5rem;
    }
    .blog-card {
        background: var(--card-background);
        border-radius: 1.25rem;
        box-shadow:0 2px 0 var(--secondary-color);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
      
    }
    .blog-card:hover {
        transform: translateY(-8px);
    }
    .blog-card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-top-left-radius: 1.25rem;
        border-top-right-radius: 1.25rem;
    }
    .blog-card-content {
        padding: 2rem;
    }
    .blog-card-content h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: var(--text-color);
    }
    .blog-card-content h3 a {
        color: var(--text-color);
        text-decoration: none;
        transition: color 0.3s ease;
    }
    .blog-card-content h3 a:hover {
        color: var(--primary-color);
    }
    .blog-card-content p {
        color: var(--text-color); 
        font-size: 1.05rem;
        line-height: 1.7;
        margin-bottom: 1.75rem;
    }
    .blog-card-tags {
        margin-bottom: 1.5rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }
    .tag-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.4rem 1rem;
        border-radius: 1.5rem;
        font-size: 0.85rem;
        font-weight: 600;
        background-color: var(--tag-background);
        color: var(--tag-text);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1.5px solid var(--border-color);
    }
    .tag-badge:hover {
        background-color: var(--tag-hover-background);
        transform: translateY(-2px);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }
    .tag-badge i {
        margin-right: 0.4rem;
        font-size: 1rem;
    }

    .blog-card-actions {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 1.5rem;
    }
    .btn-primary {
        background-color: var(--primary-color);
        border:none !important;
        border-radius: 0.75rem;
        padding: 0.8rem 1.4rem;
        font-size: 1rem;
        font-weight: 600;
        color: #ffffff;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
   
     
    }
    .btn-primary:hover {
        background-color: var(--secondary-color);
        transform: translateY(-3px);
         
    }
    .share-btn {
        cursor: pointer;
        font-size: 1.5rem;
        margin-left: 36px;
        color: var(--share-icon-color);
        transition: color 0.2s ease, transform 0.2s ease;
    }
    .share-btn:hover {
        color: var(--primary-color); 
        transform: scale(1.15);
    }
    .popover-body {
        display: flex;
        gap: 1.5rem;
        padding: 1.2rem;
        border-radius: 0.75rem;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        background-color: var(--card-background); 
    }
    .share-icon {
        color: var(--primary-color); 
        font-size: 2rem;
        text-decoration: none;
        transition: transform 0.2s ease;
    }
    .share-icon:hover {
        transform: scale(1.25);
        color: var(--secondary-color);
    }

    .sidebar {
        background: var(--sidebar-background); 
        box-shadow:0 2px 0 var(--secondary-color);
        border-radius: 1.25rem;
        padding: 2.5rem;
        margin-bottom: 2.5rem;
        position: sticky;
        top: 2rem;
        border: 1px solid var(--sidebar-border);
    }

    .sidebar h4 {
        font-family: 'Roboto', sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--sidebar-title-color); 
        margin-bottom: 1.8rem;
    }

    .vc-tags-menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }
    .vc-tags-menu li a {
        display: inline-flex;
        align-items: center;
        padding: 0.4rem 1rem;
        border-radius: 1.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        background-color: var(--vc-tags-menu-item-bg);
        color: var(--vc-tags-menu-item-text);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color); 
    }
    .vc-tags-menu li a:hover {
        background-color: var(--vc-tags-menu-item-hover-bg);
        color: var(--text-color);
        transform: translateY(-2px);
    }


    .vc-new-posts ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .vc-new-posts li {
        margin-bottom: 1.2rem;
    }
    .vc-new-posts li a {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        text-decoration: none;
        color: var(--text-color); 
        transition: color 0.3s ease;
    }
    .vc-new-posts li a:hover {
        color: var(--primary-color);
    }
    .vc-new-posts img {
        width: 60px;
        height: 60px;
        border-radius: 0.75rem;
        object-fit: cover;
        flex-shrink: 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    .vc-new-posts .post-title-sidebar {
        font-size: 1.05rem;
        font-weight: 600;
        line-height: 1.4;
    }
    .vc-new-posts .post-date-sidebar {
        font-size: 0.85rem;
        color: var(--vc-new-posts-text-muted); 
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 4rem;
        margin-bottom: 2rem;
    }
    .text-muted{
        color: var(--text-color) !important;
    }
    .pagination a {
        padding: 0.8rem 1.3rem;
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        text-decoration: none;
        color: var(--text-color);
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        background-color: var(--card-background); 
    }
    .pagination a:hover {
        background-color: var(--hover-background); 
        border-color: var(--primary-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .pagination .active {
        background-color: var(--primary-color);
        color: #ffffff;
        border-color: var(--primary-color);
        box-shadow: 0 4px 10px var(--primary-color-shadow);
    }
    .alert {
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        margin-bottom: 2rem;
        font-size: 0.95rem;
        font-weight: 500;
    }
    .alert-info {
        background-color: var(--info-background);
        color: var(--info-color);
        border: 1px solid var(--info-border);
    }

    :root {
        --primary-color-shadow: rgba(127, 20, 63, 0.2); /
        --secondary-color-shadow: rgba(168, 36, 83, 0.35);
        --search-input-background: #ffffff;
        --search-input-placeholder-color: #6b7280;
        --share-icon-color: rgb(195, 82, 101); 
        --sidebar-title-color: #1f2227;
        --sidebar-background: #ffffff;
        --sidebar-border: #e2e8f0;
        --vc-tags-menu-item-bg: #f1f5f9;
        --vc-tags-menu-item-hover-bg: #e2e8f0;
        --vc-tags-menu-item-text: #4a5568;
        --vc-new-posts-text-muted: #718096;
    }
    .dark-theme {
        --primary-color-shadow: rgba(248, 187, 208, 0.25);
        --secondary-color-shadow: rgba(255, 105, 180, 0.35); 
        --search-input-background: rgb(29, 30, 32);
        --search-input-placeholder-color: #cbd5e0;
        --share-icon-color: #f8bbd0; 
        --sidebar-title-color: #e2e8f0;
        --sidebar-background: rgb(29, 30, 32);
        --sidebar-border: rgb(29, 30, 32);
        --vc-tags-menu-item-bg: rgb(29, 30, 32);
        --vc-tags-menu-item-hover-bg: rgb(29, 30, 32);
        --vc-tags-menu-item-text: #e2e8f0;
        --vc-new-posts-text-muted: #a0aec0;
    }

    @@media (max-width: 991px) {
        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        .search-input-group {
            max-width: 100%;
        }
        .blog-card img {
            height: 220px;
        }
        .blog-card-content {
            padding: 1.5rem;
        }
        .btn-primary {
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }
        .share-btn {
        margin-left: 10px;
        }
        .blog-card-content h3 {
            font-size: 1.6rem;
        }
        .blog-card-content p {
            font-size: 0.95rem;
        }
        .sidebar {
            margin-top: 2.5rem;
            padding: 2rem;
        }
    }
    @@media (max-width: 767px) {
        .header h1 {
            font-size: 2rem;
        }
        .blog-list {
            gap: 2rem;
        }
        .blog-card {
            border-radius: 1rem;
        }
        .blog-card img {
            height: 180px;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }
        .blog-card-content {
            padding: 1.2rem;
        }
        .blog-card-content h3 {
            font-size: 1.4rem;
        }
        .blog-card-tags {
            gap: 0.5rem;
        }
        .tag-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.8rem;
        }
        .btn-primary {
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }
        .share-btn {
            font-size: 1.5rem;
        }
        .share-icon {
            font-size: 1.75rem;
        }
        .sidebar {
            padding: 1.5rem;
        }
        .sidebar h4 {
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
        }
    }
</style>

<div class="container my-5">
    <div class="text-center header">
        <h1>@(string.IsNullOrEmpty(Model?.Tag) ? "Latest Posts" : $"Posts tagged '{Model.Tag}'")</h1>
        <div class="search-bar">
            <div class="search-input-group">
                <input type="text" id="searchInput" placeholder="Search posts..." />
                <span class="input-group-text"><i class="bi bi-search"></i></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @if (Model?.Posts?.Any() == true)
            {
                <div class="blog-list" id="blogGrid">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="blog-card" data-post-id="@post.PostId" data-title="@(post.Title?.ToLower() ?? "")">
                            <a href="/posts/details/@post.Url">
                                <img src="/img/@(post.Image ?? "https://placehold.co/800x450/e0e0e0/ffffff?text=No+Image")" alt="@(post.Title ?? "Post Image")" loading="lazy">
                            </a>
                            <div class="blog-card-content">
                                <div class="blog-card-tags">
                                    @foreach (var tag in post.Tags ?? Enumerable.Empty<BlogApp.Entity.Tag>())
                                    {
                                        <a href="/posts/tag/@tag.Url" class="tag-badge"><i class="bi bi-tag-fill me-1"></i>@tag.Text</a>
                                    }
                                </div>
                                <h3><a href="/posts/details/@post.Url">@(post.Title ?? "Untitled")</a></h3>
                                <p>@(string.IsNullOrEmpty(post.Description) ? "No description available." : post.Description.Length > 200 ? post.Description.Substring(0, 200) + "..." : post.Description)</p>
                                <div class="blog-card-actions">
                                    <a href="/posts/details/@post.Url" class="btn btn-primary">
                                        Read More <i class="bi bi-arrow-right"></i>
                                    </a>
                                    <small class="text-muted ms-auto" style="color:var(--text-color); !important
                                    "><i class="bi bi-eye"></i> @post.ViewCount Views</small>
                                    <i class="bi bi-share-fill share-btn"
                                       data-bs-toggle="popover"
                                       data-bs-html="true"
                                       data-bs-content="
                                            <a href='https://twitter.com/intent/tweet?url=https://myblog.com/posts/details/@post.Url&text=@(HttpUtility.JavaScriptStringEncode(post.Title ?? "Check out this post!"))' target='_blank' class='share-icon share-twitter' aria-label='Share on Twitter'><i class='bi bi-twitter'></i></a>
                                            <a href='https://www.facebook.com/sharer/sharer.php?u=https://myblog.com/posts/details/@post.Url' target='_blank' class='share-icon share-facebook' aria-label='Share on Facebook'><i class='bi bi-facebook'></i></a>
                                            <a href='https://www.linkedin.com/sharing/share-offsite/?url=https://myblog.com/posts/details/@post.Url' target='_blank' class='share-icon share-linkedin' aria-label='Share on LinkedIn'><i class='bi bi-linkedin'></i></a>"
                                       aria-label="Share this post"></i>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (Model.TotalPages > 1)
                {
                    <div class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <a href="@(string.IsNullOrEmpty(Model.Tag) ? $"/posts?page={Model.CurrentPage - 1}" : $"/posts/tag/{Model.Tag}?page={Model.CurrentPage - 1}")">«</a>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <a href="@(string.IsNullOrEmpty(Model.Tag) ? $"/posts?page={i}" : $"/posts/tag/{Model.Tag}?page={i}")" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a href="@(string.IsNullOrEmpty(Model.Tag) ? $"/posts?page={Model.CurrentPage + 1}" : $"/posts/tag/{Model.Tag}?page={Model.CurrentPage + 1}")">»</a>
                        }
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    No posts found.
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="sidebar">
                <vc:tags-menu></vc:tags-menu>
            </div>
            <div class="sidebar mt-4">
                <vc:new-posts></vc:new-posts>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
            popoverTriggerList.forEach(popoverTriggerEl => {
                new bootstrap.Popover(popoverTriggerEl, {
                    trigger: 'click',
                    placement: 'top',
                });
            });

            const searchInput = document.getElementById('searchInput');
            const blogGrid = document.getElementById('blogGrid');

            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const cards = blogGrid.querySelectorAll('.blog-card');

                cards.forEach(card => {
                    const title = card.getAttribute('data-title');
                    if (title && title.includes(searchTerm)) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
}
