@model InboxViewModel

@{
    ViewData["Title"] = "Messages";
}

<style>
    .chat-container {
        display: flex;
        height: calc(100vh - 120px);
    }

    .chat-sidebar {
        display: flex;
        flex-direction: column;
        width: 380px;
        border: 1px solid #e9ecef;
        background-color: #fff;
        border-radius: .5rem;
    }

    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        border: 1px solid #e9ecef;
        margin-left: 1rem;
        background-color: #f8f9fa;
        border-radius: .5rem;
    }

    .nav-link {
        color: #7f143f;
    }

    .nav-link:hover {
        color: #7f143f;
    }

    .list-group-item.active {
        background-color: #f8f0f4;
        border-left: 4px solid #7f143f;
        font-weight: 600;
    }
</style>

<div class="chat-container">

    <div class="chat-sidebar">
        <div class="card-header bg-light">
            <ul class="nav nav-pills nav-fill" id="messageTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="chats-tab" data-bs-toggle="tab" data-bs-target="#chats"
                        type="button" role="tab">Chats</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts"
                        type="button" role="tab">New Chat</button>
                </li>
            </ul>
        </div>
        <div class="flex-grow-1" style="overflow-y: auto;">
            <div class="tab-content h-100">
                <div class="tab-pane fade show active h-100" id="chats" role="tabpanel">
                    <div class="list-group list-group-flush">
                        @if (Model.Conversations.Any())
                        {
                            @foreach (var convo in Model.Conversations)
                            {
                                <a href="#" class="list-group-item list-group-item-action p-3 conversation-link"
                                    data-username="@convo.OtherUser.UserName">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@convo.OtherUser.Name</h6>
                                        <small class="text-muted">@convo.LastMessage.SentAt.ToString("HH:mm")</small>
                                    </div>
                                    <p class="mb-1 small text-muted text-truncate">@convo.LastMessage.Content</p>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted p-4">You have no active conversations.</p>
                        }
                    </div>
                </div>
                <div class="tab-pane fade h-100" id="contacts" role="tabpanel">
                    <div class="list-group list-group-flush">
                        @if (Model.Contacts.Any())
                        {
                            @foreach (var contact in Model.Contacts)
                            {
                                <a href="#"
                                    class="list-group-item list-group-item-action d-flex align-items-center p-3 conversation-link"
                                    data-username="@contact.UserName">
                                    <img src="/img/@(contact.Image ?? "default-avatar.jpg")" alt="avatar"
                                        class="rounded-circle me-3" style="width: 40px; height: 40px;">
                                    <span>@contact.Name</span>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-center text-muted p-4">You have no mutual followers to start a new chat.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="chat-content-area" class="chat-main">
        <div class="d-flex align-items-center justify-content-center h-100 text-center">
            <div>
                <i class="bi bi-chat-dots" style="font-size: 4rem; color: #ced4da;"></i>
                <p class="mt-2 text-muted">Select a chat to start messaging.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(document).on('click', '.conversation-link', function (e) {
                e.preventDefault();

                var username = $(this).data('username');
                var url = `/Message/Chat/${username}`;

                $('.conversation-link').removeClass('active');
                $(this).addClass('active');

                $('#chat-content-area').html('<div class="d-flex justify-content-center align-items-center h-100"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');

                $('#chat-content-area').load(url, function (response, status, xhr) {
                    if (status == "error") {
                        $('#chat-content-area').html('<p class="text-danger text-center p-4">Failed to load chat. Please try again.</p>');
                    }
                });
            });
        });
    </script>
}