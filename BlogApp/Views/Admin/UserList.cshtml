@model IEnumerable<User>

@{
    ViewData["Title"] = "User List";
}

<h1>User Management</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>