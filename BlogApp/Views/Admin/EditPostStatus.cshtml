@model Post

@{
    ViewData["Title"] = "Manage Post Status";
}

<h2>Manage Status for Post: "@Model.Title"</h2>
<p><strong>Author:</strong> @Model.User?.Name</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5>Post Content Preview</h5>
                <hr>
                <div>@Html.Raw(Model.Content)</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="EditPostStatus" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="PostId" value="@Model.PostId" />

            <div class="card">
                <div class="card-header">
                    <strong>Manage Publication Status</strong>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="IsActive"
                            @(Model.IsActive ? "checked" : "") />
                        <label class="form-check-label" for="IsActive">
                            Publish Post
                        </label>
                        <input type="hidden" name="IsActive" value="false" />
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Status</button>
                    <a href="/post/list" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>